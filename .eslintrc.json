{
    "env": {
        "browser": true,
        "es2021": true,
	"webextensions": true,
	"jquery": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 12
    },
    "plugins": [
	"jquery",
        "no-floating-promise"
    ],
    "rules": {
        "no-unused-vars": "off",
        "no-undef": "warn",
        "no-cond-assign": "off",
        "no-global-assign": "off",
        "require-await": "warn",
        "no-floating-promise/no-floating-promise": "warn",
        "semi": "warn"
    }
}
